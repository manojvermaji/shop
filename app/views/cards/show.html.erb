

<h1>Your Cart</h1>

<style>
  /* Styling for the cart items */
  .item {
    border: 1px solid #ddd;
    padding: 10px;
    margin-bottom: 10px;
  }

  .item h3 {
    margin: 0;
    font-size: 18px;
  }

  .item h5 {
    margin: 5px 0;
    font-size: 14px;
    color: #888;
  }

  .item form {
    display: inline-block;
  }

  .item form input[type="number"] {
    width: 50px;
  }

  .item form input[type="submit"],
  .item form button[type="submit"] {
    display: inline-block;
    background-color: green;
    color: #fff;
    padding: 5px 10px;
    border: none;
    cursor: pointer;
  }

  .item form button[type="submit"] {
    background-color: #dc3545;
  }

  /* Styling for the cart subtotal */
  .container {
    margin-top: 20px;
  }

  .container h3 {
    font-size: 18px;
    margin-bottom: 10px;
  }

  /* Styling for the cart page header */
  h1 {
    font-size: 24px;
    margin-bottom: 20px;
  }

  /* Styling for the overall layout */
  body {
    font-family: Arial, sans-serif;
    line-height: 1.6;
    background-color: #f9f9f9;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
    background-color: #fff;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  }

  /* Styling for the subtotal section at the bottom */
  .footer {
    text-align: right;
    margin-top: 20px;
  }

  .footer h3 {
    font-size: 18px;
    margin-bottom: 10px;
  }

  /* Remove the default bullet points from the list of items */
  ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
</style>

<div class="container">
  <% @order_items.each do |item| %>
    <div class="item">
      <h3><%= item.product.title %></h3>
      <h5><%= item.product.price %></h5>

      <%= form_for item, remote: true do |f| %>
        <%= f.hidden_field :product_id, :value => item.product.id %>
        <%= f.number_field :quantity, :value => item.quantity.to_i %>
        <%= f.submit "Update Cart" %>
      <% end %>
      <%= button_to "Remove Item", order_item_path(item), method: :delete, remote: true %>

      <h2>Subtotal: <%= item.total %></h2>
    </div>
  <% end %>

  <h3>Your current cart value has a subtotal of: <%= current_order.subtotal %></h3>
</div>
